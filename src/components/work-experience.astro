---
import type { WorkExperience } from '../types';

import dayjs from 'dayjs';
import 'dayjs/locale/es-mx';

interface Props {
	data: WorkExperience;
}

const { data } = Astro.props;

dayjs.locale('es-mx');

const isCurrent = !data.end_date;
---

<li class='ml-6'>
	<span
		class='absolute flex items-center justify-center w-6 h-6 bg-blue-100 rounded-full -left-3 sm:mt-5 ring-8 ring-white dark:ring-gray-900 dark:bg-blue-900'
	>
		<i class='[&>*]:w-4 [&>*]:h-4 [&>*]:fill-blue-800 [&>*]:dark:fill-blue-300'>
			<Fragment
				set:html={import(`../assets/icons/${data.icon}.svg?raw`).then(
					(i) => i.default
				)}
			/>
		</i>
	</span>
	<div
		class='flex gap-2 mb-1 text-sm font-normal leading-none text-gray-500 dark:text-gray-400'
	>
		<time>{dayjs(data.start_date).format('MMMM, YYYY')}</time>
		{
			data.end_date && (
				<>
					<span>-</span>
					<time>{dayjs(data.end_date).format('MMMM, YYYY')}</time>
				</>
			)
		}
	</div>
	<h3
		class='flex items-center mb-1 text-lg font-semibold text-gray-900 dark:text-white'
	>
		{data.title}
		{
			isCurrent && (
				<span class='bg-blue-100 text-blue-800 text-sm font-medium mr-2 px-2.5 py-0.5 rounded dark:bg-blue-900 dark:text-blue-300 ml-3'>
					Actual
				</span>
			)
		}
	</h3>
	<div
		class='flex sm:items-center text-sm font-normal leading-none flex-col sm:flex-row'
	>
		<span>{data.institution}</span>
		<span
			class='sm:ml-2 sm:pl-2 sm:border-l border-l-gray-600 dark:border-l-white'
			>{data.city}, {data.country}</span
		>
	</div>
	<ul
		class='mt-4 text-base font-normal space-y-1 text-gray-600 list-disc list-inside dark:text-gray-400'
	>
		{data.goals.map((g) => <li>{g}</li>)}
	</ul>
</li>
