<form class='space-y-4 text-sm'>
	<div class='flex gap-2 justify-between'>
		<div class='flex flex-col w-full'>
			<label for='names' class='font-bold mb-1'>Nombres</label>
			<input
				type='text'
				id='names'
				class='border-2 border-gray-400 dark:border-gray-700 rounded bg-transparent text-black dark:text-white p-2 outline-none'
			/>
		</div>
		<div class='flex flex-col w-full'>
			<label for='email' class='font-bold mb-1'>Email</label>
			<input
				type='email'
				id='email'
				class='border-2 border-gray-400 dark:border-gray-700 rounded bg-transparent text-black dark:text-white p-2 outline-none'
			/>
		</div>
	</div>
	<div class='flex flex-col'>
		<label for='message' class='font-bold mb-1'>Mensaje</label>
		<textarea
			name='message'
			id='message'
			class='border-2 border-gray-400 dark:border-gray-700 rounded bg-transparent text-black dark:text-white p-2 outline-none resize-none'
		></textarea>
	</div>
	<button
		type='submit'
		class='rounded w-full font-bold py-2 px-3 inline-block border-2 border-blue-800 bg-blue-700 text-white dark:bg-blue-800 dark:border-blue-800 hover:bg-blue-600 dark:hover:bg-blue-900'
		>Contactar</button
	>
</form>
